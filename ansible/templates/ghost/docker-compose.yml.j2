version: '3.8'
services:
  db:
    image: mysql:5.7
    restart: always
    environment:
      MYSQL_DATABASE: '{{ lookup('env', 'GHOST_DB') }}'
      MYSQL_USER: '{{ lookup('env', 'GHOST_MYSQL_USER') }}'
      MYSQL_PASSWORD: '{{ lookup('env', 'GHOST_MYSQL_PASSWORD') }}'
      MYSQL_ROOT_PASSWORD: '{{ lookup('env', 'GHOST_ROOT_PASSWORD') }}'
    ports:
      - '3306:3306'
    expose:
      - '3306'
    volumes:
      - type: bind
        source: /home/freecodecamp/mysql/data
        target: /var/lib/mysql
