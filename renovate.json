{
  "extends": ["github>freecodecamp/renovate-config"],
  "ignorePaths": ["scratchpad"],
  "packageRules": [
    {
      "groupName": "cdktf",
      "matchPackageNames": ["cdktf", "cdktf-cli", "@cdktf/*"]
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
