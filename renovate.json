{
  "extends": [
    "github>freecodecamp/renovate-config"
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/stacks/.+/stack-.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "portainer",
      "matchPackageNames": [
        "/^portainer//"
      ]
    }
  ]
}
