{
  "variables": {
    "az_sp_client_id": "{{env `AZURE_SERVICE_PRINCIPAL_CLIENT_ID`}}",
    "az_sp_client_secret": "{{env `AZURE_SERVICE_PRINCIPAL_CLIENT_SECRET`}}",
    "az_sp_tenant_id": "{{env `AZURE_SERVICE_PRINCIPAL_TENANT_ID`}}",
    "az_subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}"
  },
  "sensitive-variables": ["az_sp_client_id", "az_sp_client_secret", "az_sp_tenant_id", "az_subscription_id"],

  "builders": [{
    "type": "azure-arm",

    "client_id": "{{user `az_sp_client_id`}}",
    "client_secret": "{{user `az_sp_client_secret`}}",
    "tenant_id": "{{user `az_sp_tenant_id`}}",
    "subscription_id": "{{user `az_subscription_id`}}",

    "managed_image_resource_group_name": "ops_rg",
    "managed_image_name": "web-proxy-{{isotime \"060102-0304\" | clean_resource_name}}",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",

    "location": "East US",
    "vm_size": "Standard_B2s"
  }],


  "provisioners": [{
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "apt-get update",
      "apt-get upgrade -y",
      "apt-get -y install nginx",

      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
}